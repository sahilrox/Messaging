<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp" android:layout_height="wrap_content"
    android:padding="8dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/chat_pic"
        android:src="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/chat_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/chat_pic"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/chatbubble_left"
        android:text="Hello there how are you wassup. What are you doing?"
        android:paddingLeft="30dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textSize="18sp"
        android:textAppearance="?attr/textAppearanceBody2"
        android:maxWidth="250dp" />

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:id="@+id/seen_image"
        android:src="@drawable/ic_check_black_24dp"
        android:layout_marginLeft="20dp"
        android:layout_alignLeft="@id/chat_text"
        android:layout_below="@id/chat_text"
        android:visibility="visible"/>

</RelativeLayout>